<body>
  <nav class="navbar navbar-light bg-light mb-4">
    <a href="/" class="navbar-brand">Perguntas e Respostas App</a>
  </nav>

  <div class="container">
    <div class="card">
      <div class="card-header">
        <h3>Realizar Pergunta</h3>
      </div>
      <div class="card-body">
        <form action="" id="form-ask">
          <label>Titulo</label>
          <input type="text" placeholder="Título" class="form-control">
          <br /><label>Descrição</label>
          <textarea placeholder="Descreva sua pergunta aqui" class="form-control"></textarea>
          <br />
          <button class="btn btn-success">Perguntar</button>
        </form>
      </div>
    </div>
  </div>



</body>
