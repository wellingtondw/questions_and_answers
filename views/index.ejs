<%- include('partials/header'); -%>

<body>
  <%- include('partials/navbar'); -%>

  <div class="container">
    <h1>Perguntas</h1>
    <hr>
    <a href="/ask" class="btn btn-primary mb-2 mt-2">Perguntar</a>
    <hr>
    <% questions.forEach(question => { %>
    <br />
    <div class="card">
      <div class="card-body">
        <h3><%=question.title%></h3>
      </div>
      <div class="card-footer">
        <a href="/question/<%=question.id%>" class="btn btn-primary">Responder</a>
      </div>
    </div>
    <br />
    <%})%>

  </div>
</body>
<%- include('partials/footer'); -%>